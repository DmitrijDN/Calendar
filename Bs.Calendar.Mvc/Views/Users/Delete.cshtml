@model Bs.Calendar.Mvc.ViewModels.Users.UserEditVm

@{
    ViewBag.Title = "Delete User";
}

<div class="row">
    <div class="centered seven columns default alert text-center">
        <h4>@ViewBag.Title</h4>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("UserId", Model.UserId)

        <fieldset class="centered seven columns">
            <legend>
                <h4>@Model.FirstName @Model.LastName</h4>
            </legend>
          
            <div class="centered eight columns">Are you sure want to delete this user?</div>
            <br/>
            <br/>

            <div class="medium default btn push_one three columns">
                <input type="submit" value="Delete"/>
            </div>

            <div class="medium default btn push_three three columns">
                @Html.ActionLink("No", "Edit", new {id = @Model.UserId})
            </div>
        </fieldset>
    }
</div>