@model Bs.Calendar.Mvc.ViewModels.UserEditVm

@{
    ViewBag.Title = "Profile";
    var fullName = string.Format("{0} {1}", Model.FirstName, Model.LastName);
    ViewBag.Title = string.Concat(fullName," Info");
}

<div class="row">
    <h2>Profile:</h2>
</div>
<div class="row">
    <h3>@fullName</h3> @Model.Role
</div>
<div class="row">
    <p>@Model.Email</p>
</div>
<div class="row">
    <div class="medium default btn icon-right icon-pencil">@Html.ActionLink("Edit", "Edit", "Users", new {id = Model.UserId}, null)</div>
    <div class="medium danger btn icon-right icon-trash">@Html.ActionLink("Delete", "Delete", "Users", new {id = Model.UserId}, null)</div>
</div>