<div class="row" id="user-column-list">
    <div class="row column-list-body invisible-onstart" data-bind="visible: showColumnUserList() && columnUsersCount() > 0">
        <div class="row column-header" data-bind="foreach: userColumns">
            <div data-bind="text: title"></div>
        </div>
        
        <div class="row user-column" data-bind="foreach: userColumns">
            <div data-bind="template: { name: 'team-template', foreach: allUsers }"></div>
        </div>
    </div>

    <div class="warning alert text-center invisible-onstart" data-bind="visible: showColumnUserList() && columnUsersCount() == 0">
        Sorry, no users to add.
    </div>        
</div>
<script type="text/html" id="team-template">
    <div class="row">
        <span data-bind="text : $parent.shortName(FullName)"></span>
        <i data-bind="click: function () { $root.removeUser($parent, $data) }" class="icon-plus-circled pull_right"></i>
    </div>
</script>