@using Bs.Calendar.Mvc.Services
@if (Request.IsAuthenticated)
{    
    var calendar = new CalendarMembershipProvider();
    var userName = calendar.GetUserNameByEmail(User.Identity.Name);
    <text>
        @Html.ActionLink(userName,
        "Manage", "Account")|
        @Html.ActionLink("Logout", "Logout", "Account")        
    </text>
} 
else {
    
       <text>@Html.ActionLink("Register", "Register", "Account") |
           @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</text>
}
