<div class="row" id="simple-team-list">
    <div class="row team-simplelist-body invisible-onstart" data-bind="visible: showTeamList() && teamList().length > 0">
        <ul data-bind="foreach: teamList" class="four_up tiles team-simplelist">
            <li>
                <span data-bind="text: Name"></span>
                <i class="icon-plus-circled pull_right" data-bind="click: $root.removeTeam"></i>
            </li>
        </ul>
    </div>

    <div class="warning alert text-center invisible-onstart" data-bind="visible: showTeamList() && teamList().length == 0">
        Sorry, no teams to add.
    </div>     
</div>