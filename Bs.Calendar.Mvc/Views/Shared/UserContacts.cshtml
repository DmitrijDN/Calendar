<div class="ten columns contacts">
    <div class="row field append">
        <div class="btn medium default eight columns">Contacts</div>
        <div class="medium info btn icon-left icon-user-add four columns" data-bind="click: addContact"><a href="#">Add</a></div>
        <div></div>
    </div>
    <ul data-bind="foreach: Contacts">
        <li class="field prepend append">
            <input data-bind="value: ContactType, attr: { name: $root.getIndexedName($index(), 'ContactType') }" type="hidden">
            <input class="wide text input eight columns" type="text" data-bind="value: Value, valueUpdate: 'afterkeydown', attr: { name: $root.getIndexedName($index(), 'Value') }">
            <div class="adjoined two columns"><i data-bind="attr: { class: Icon }"></i></div>
            <div class="adjoined btn medium two columns" data-bind="click: removeContact"><i class="icon-cancel"></i></div>
        </li>
    </ul>
</div>