<table data-bind="visible: bookHistory().length > 0">
    <thead>
        <th>User name</th>
        <th>Take date</th>
        <th>Return date</th>
    </thead>
    <tbody data-bind="foreach: bookHistory">
        <tr>
            <td>
                <a data-bind="text: userFullName"></a>                
                <input type="hidden" data-bind="value: userId, attr: { name: $root.indexedName($index(), 'UserId') }"/>
            </td>
            <td>
                <input type="date" data-bind="value: takeDate, attr: { name: $root.indexedName($index(), 'TakeDate') }" style="background-color: yellow">
            </td>
            <td>
                <input type="date" data-bind="value: returnDate, attr: { name: $root.indexedName($index(), 'ReturnDate') }" style="background-color: greenyellow">
            </td>
        </tr>
    </tbody>
</table>
