<table>
    <thead>
        <th>User</th>
        <th>Take date</th>
        <th>Return date</th>
        <th>Order</th>
    </thead>
    <tbody>
        <tr>
            <td>
                <select data-bind="options: $root.peoples, optionsValue: 'peopleId', optionsText: 'peopleName'" name="UserId"></select>
            </td>
            <td>
                <input type="date" data-bind="value: $root.takeDate" name="TakeDate" style="background-color: yellow">
            </td>
            <td>
                <input type="date" data-bind="value: $root.returnDate" name="ReturnDate" style="background-color: greenyellow">
            </td>
            <td>
                <select data-bind="options: $root.orderDirections" name="OrderDirection"></select>
            </td>
        </tr>
    </tbody>
</table>
<div class="medium info btn icon-left icon-book three columns pull_right" id="SaveHistoryButton">
    <input type="submit" value="Save" />
</div>
