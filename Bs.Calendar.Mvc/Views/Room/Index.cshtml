@model Bs.Calendar.Mvc.ViewModels.RoomsVm

@{
    ViewBag.Title = "Rooms List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class ="nine columns centered">
        <table>            
            <thead>
                <tr>
                    <th>Room name</th>
                    <th>Number of places</th>
                    <th>Color</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model.Rooms)
                {
                    <tr>
                        <td> @room.Name </td>
                        <td> @room.NumberOfPlaces </td>
                        <td> @room.Color </td>
                        <td>
                            <div class="medium default btn icon-left icon-pencil">
                                @Html.ActionLink("Edit", "UpdatePage", new { id = room.Id})
                            </div>
                        </td>
                        <td>
                            <div class="medium danger btn icon-left icon-trash">
                                @Html.ActionLink("Delete", "Delete", new {id = room.Id})
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    </div>
</div>

<div class="row">
    <div class = "nine columns centered">
        <div class="medium primary btn icon-left icon-plus pull_right">
            @Html.ActionLink("Add", "AddPage")
        </div>
    </div>
</div>