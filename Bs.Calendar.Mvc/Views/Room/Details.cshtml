@model Bs.Calendar.Mvc.ViewModels.RoomEditVm

@{
    const string colorClassTemplate = "roomColor_{0}";    
    ViewBag.Title = "Room Description";
}

<div class="row">
    <div class="centered seven columns default alert">
        <h4 class="centered five columns">@ViewBag.Title</h4>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        <fieldset class="centered seven columns">
            <legend>
                <h4>@Model.Name</h4>
            </legend>
        
            <ul>
                <li class="field">
                    @Html.LabelFor(room => room.NumberOfPlaces, new {@class = "inline"})
                    <div class = "pull_right">@Model.NumberOfPlaces</div>
                </li>
            </ul>
            <ul>
                <li class="field">
                    @Html.LabelFor(room => room.Color, new {@class = "inline"})
                    <div class="@string.Format(colorClassTemplate, Model.Color) roomColor pull_right"></div>
                </li>
            </ul>
        
            
            <div class="medium default btn centered three columns">
                @Html.ActionLink("Back", "Index")
            </div>
        </fieldset>
    }
</div>

@section styles {
    <link href="@Url.Content("~/Content/Layout/edit-form.css")" rel="stylesheet"/>
}