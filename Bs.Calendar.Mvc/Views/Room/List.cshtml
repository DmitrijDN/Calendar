@model Bs.Calendar.Mvc.ViewModels.RoomsVm

@{
    const string colorClassTemplate = "roomColor_{0}";    
}

@foreach (var room in Model.Rooms)
{
<tr>
    <td> @room.Name </td>
    <td> @room.NumberOfPlaces </td>
    <td> <div class="@string.Format(colorClassTemplate, room.Color) roomColor"></div> </td>
    <td>
        <div class="medium default btn icon-left icon-pencil">
            @Html.ActionLink("Edit", "Edit", new { id = room.Id})
        </div>
    </td>
    <td>
        <div class="medium danger btn icon-left icon-trash">
            @Html.ActionLink("Delete", "Delete", new {id = room.Id})
        </div>
    </td>
</tr>
}